                input(type='password' name='password')
            p 국가코드 :
                input(type='text' name='countrycode' value='81')
            p 전화번호 :
                input(type='text' name='mobile' value= mobile)
            p 약관동의 :
                input(type='text' name='select_of_use' value='true')
            p sms 수신 동의 :
                input(type='text' name='sms' value='true')
            p
